<?xml version="1.0" encoding="utf-8"?>
<paths>
    <!-- path：需要临时授权访问的路径（.代表所有路径）, name：就是你给这个访问路径起个名字 -->
    <!--1、对应外部内存卡根目录：Environment.getExternalStorageDirectory()-->
    <external-path
        name="external_storage_root"
        path="." />
    <!--2、对应内部内存卡根目录：Context.getFileDir()-->
    <files-path
        name="int_root"
        path="." />
    <!--3、对应外部内存卡根目录下的APP公共目录：Context.getExternalFileDir(String)-->
    <external-files-path
        name="ext_pub"
        path="." />
    <!--4、对应应用默认缓存根目录：Context.getCacheDir()-->
    <cache-path
        name="app_cache"
        path="." />
    <!--5、对应外部内存卡根目录下的APP缓存目录：Context.getExternalCacheDir()-->
    <external-cache-path
        name="ext_cache"
        path="." />
</paths>